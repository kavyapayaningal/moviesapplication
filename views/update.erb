<table class="table table-striped table-hover"
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Director</th>
    <th>Year</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.id %></td>
    <td><%= movie.name %></td>
    <td><%= movie.director %></td>
    <td><%= movie.year %></td>
    <td> 


    <form class="btn btn-default btn-xs" action=<%="/movies/#{movie.id}/delete"%> method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="&times;" title="Delete Task">
    </form>
  </td>
  </tr>
  <% end %>
  </tbody>
  </table>
