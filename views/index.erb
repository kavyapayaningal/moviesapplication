<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Director</th>
      <th>Year</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.name %></td>
        <td><%= movie.director %></td>
        <td><%= movie.year %></td>
        <td>
          <a class="btn btn-default btn-xs" href="/movies/<%= movie.id %>" role="button">Detail</a>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
